@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Employee Attendance Tracker</h1>
    <p class="lead">Welcome to the Employee Attendance Management System</p>
</div>

<div class="container mt-5">
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Create", "Employees")" class="btn btn-outline-primary btn-sm w-100">
                                <i class="fas fa-plus"></i> Add Employee
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Create", "Departments")" class="btn btn-outline-success btn-sm w-100">
                                <i class="fas fa-plus"></i> Add Department
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Create", "Attendances")" class="btn btn-outline-warning btn-sm w-100">
                                <i class="fas fa-plus"></i> Record Attendance
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Index", "Attendances")" class="btn btn-outline-info btn-sm w-100">
                                <i class="fas fa-chart-bar"></i> View Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .btn {
        transition: all 0.2s ease-in-out;
    }
    
    .btn:hover {
        transform: scale(1.05);
    }
</style>
