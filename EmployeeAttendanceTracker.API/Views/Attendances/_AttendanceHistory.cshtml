@model IEnumerable<EmployeeAttendanceTracker.BLL.DTOs.CreateAttendanceDto>

<div class="card">
    <div class="card-header">
        <h5>Attendance History</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var attendance in Model.Take(5))
                        {
                            <tr>
                                <td>@attendance.Date.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge @(attendance.Status.ToString() == "Present" ? "badge-success" : "badge-danger")">
                                        @attendance.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No attendance records found.</p>
        }
    </div>
</div> 